{
  "compilerOptions": {
    "strict": false,
    "target": "ES2018",
    "moduleResolution": "bundler",
    "module": "ES6",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "./dist",
    "noEmitOnError": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
